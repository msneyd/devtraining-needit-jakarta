        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	// Instantiate the NeedItUtils class. Call the IsDatePast method and 
	// pass the u_when_needed value.
	var utils = new NeedItUtils();
	var errMsg = "'When needed' date must be a future date! Request was not saved to the database";
	
	// if the isPast is true the date is in the past
	if(utils.isDatePast(current.u_when_needed) == true){
		gs.addErrorMessage(errMsg);
		current.setAbortAction(true);
		return;
	}
	
	if(utils.isDateToday(current.u_when_needed) == true){
		gs.addErrorMessage(errMsg);
		current.setAbortAction(true);		
	}
})(current, previous);]]></script>
